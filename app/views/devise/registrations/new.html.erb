<div class=" flex flex-col justify-center py-12 ">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="mt-8 flex justify-center">
      <div class="size-12 rounded-full bg-teal-400 text-teal-400">.</div>
    </div>
    <h2 class="mt-6 text-center text-3xl font-extrabold">Sign up to spot<span class="text-teal-400">z</span></h2>
  </div>

  <div class="my-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="p-4">
           <%= f.input :username,
                required: true,
                autofocus: true,
                label: false,
                error_html: {
                  class: "text-teal-400",
                },
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 mb-4 focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "username",
                  placeholder: "username",
                } %>

        <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                error_html: {
                  class: "text-teal-400",
                },
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 mb-4 focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "email",
                  placeholder: "email",
                } %>

        <%= f.input :password,
                required: true,
                label: false,
                error_html: {
                  class: "text-teal-400",
                },
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 my-4 focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "new-password",
                  placeholder: "password",
                } %>
        <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 mb-4focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "new-password...",
                  placeholder: "confirm password..",
                } %>
      </div>
      <div class="form-actions">
        <%= button_tag(type: 'submit', class: "w-full px-4") do %>
          <%= render "shared/button_primary", text: "Sign up" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="flex items-center px-4 pb-8">
    <div class="h-1 w-full border-b border-slate-300"></div>
    <div class="mx-3 text-slate-300">Or</div>
    <div class="h-1 w-full border-b border-slate-300"></div>
  </div>
  <div class="px-4">
    <%= link_to new_session_path(resource_name) do %>
      <%= render "shared/button_secondary", text: "Log in" %>
    <% end %>
    <div class="mt-16 flex justify-center text-sm text-gray-400">
      By signing up you agree to our
      <span class="ml-1 text-teal-400">terms of service</span>
    </div>
  </div>
</div>
