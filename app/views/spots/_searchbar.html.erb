<div class="mb-8 flex items-center" data-controller="toggle">
  <div class="relative my-4 w-full rounded-full border border-gray-300 bg-white px-6 py-3">
    <div class="flex items-center justify-between">
      <div class="flex grow-0 items-center">

        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-7 grow-0">
          <path
            fill-rule="evenodd"
            d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z"
            clip-rule="evenodd"/>
        </svg>

        <div class="flex w-72 items-center justify-between ">
          <div class="filter-search">
            <%= form_with url: (), method: :get, class: "h-10 w-56 search-bar flex items-center" do %>
              <%= text_field_tag :query,
              params[:query],
              class:
                "search-input border-white w-48 placeholder:text-slate-500 focus:ring-white focus:border-white text-xl",
              placeholder: "Search..." %>
              <div class="no-scrollbar absolute -bottom-12 -left-2 -mx-4 inline-flex hidden w-screen snap-x flex-nowrap overflow-x-auto" data-toggle-target="tags">
              <div class="search-categories ml-8">
                <% Category.all.each do |category| %>
                  <div class="tag-item">
                    <%= check_box_tag "category_ids[]", category.id, params[:category_ids]&.include?(category.id), id:"category_#{category.id}", class: "tag-selector form-control" %>
                    <%= label_tag "category_#{category.id}" do %>
                      <%= content_tag(:span, category.name) %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              </div>
              <%= submit_tag "", class: "search-div fa-solid" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <svg data-action="click->toggle#toggle"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-7 absolute bottom-4 right-4"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75"
      />
    </svg>
    </div>
  </div>
