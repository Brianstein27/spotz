<div class="relative">
  <div class="mt-8 flex">
    <div class="h-9 w-9 rounded-full bg-teal-400 text-teal-400">.</div>
    <div class="ml-2 text-4xl font-bold">Bookmarks</div>
  </div>

  <div class="my-7 text-2xl font-bold ">Spotted by you...</div>

  <div class="sticky top-0 z-10 bg-white pb-4 pt-8">

    <div class="mt-2 flex justify-evenly divide-x-2 divide-slate-200">
      <div
        class="
          mb-2 w-full border-b-2 border-teal-300 pb-2 text-center text-xl font-semibold
          text-teal-400
        "
      >List</div>
      <div
        class="
          mb-2 w-full border-b-2 border-slate-200 pb-2 text-center text-xl font-light
          text-slate-400
        "
      >Map
      </div>
    </div>

    <% @bookmarks.each do |bookmark| %>
      <%= link_to spot_path(bookmark.spot) do %>
        <div class="mb-8 mt-4">
          <%= render "shared/card_spot_bookmark", bookmark: bookmark, spot: bookmark.spot %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
